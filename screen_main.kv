#:kivy 2.1.0

<ScreenMain>:
    MDBoxLayout:
        orientation: "vertical"

		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint_y: 0.2
			md_bg_color: "#111111"
                    
            Image:
                id: logo
                source:'assets/images/logo-trb.png'
                size_hint_x: 0.15
                allow_stretch: True 

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.7

				MDLabel:
					id: title            
					text: "VEHICLE INSPECTION INTEGRATION MANAGEMENT SYSTEM"
					halign: "left"
					valign: "middle"
					font_style: 'H4'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"


				MDLabel:
					id: subtitle            
					text: "VISUAL INSPECTION"
					halign: "left"
					valign: "middle"
					font_style: 'H5'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.15

				MDLabel:
					id: lb_time
					text: "12:34:00"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_date
					text: "17/08/2024"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_operator
					text: "Nama Operator"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_comm
					text: "Status : Disconnected"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"

		# main layout
		MDBoxLayout:
			id: layout_main
			orientation: "horizontal"
			size_hint_y: 0.7
			padding:20

			MDBoxLayout:
				orientation: "horizontal"
				spacing:50

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.1
					spacing: 20

					MDCard:
						ripple_behavior: True
                        on_press: root.exec_navigate_home()
						md_bg_color: "#EEEEEE"
                        padding: 10
						Image:
							source:'assets/images/icon-home.png'
							size_hint_x: 0.15
							allow_stretch: True 

					MDCard:
						ripple_behavior: True
                        on_press: root.exec_navigate_login()
						md_bg_color: "#EEEEEE"
                        padding: 10
						AsyncImage:
							id: img_user
							source:'assets/images/icon-login.png'
							size_hint_x: 0.15
							allow_stretch: True 

					MDCard:
						ripple_behavior: True
                        on_press: root.exec_navigate_main()
						md_bg_color: "#EEEEEE"
                        padding: 10
						Image:
							source:'assets/images/icon-realtime.png'
							size_hint_x: 0.15
							allow_stretch: True 

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.9
					spacing: 20

					MDLabel:
						text: "ANTRIAN KENDARAAN"
						halign: "center"
						valign: "middle"
						font_style: 'H6'
						size_hint_y: 0.05

					MDBoxLayout:
						orientation: "horizontal"
						md_bg_color: "#DDDDDD"
						size_hint_y: 0.1
						spacing: 50

						MDBoxLayout:
							orientation: "vertical"
							MDLabel:
								text: "PENDAFTARAN"
								halign: "center"
								valign: "middle"
								font_style: 'Subtitle1'

							MDLabel:
								id: lb_dash_pendaftaran
								halign: "center"
								valign: "middle"
								font_style: 'H4'
								text: "0"

						MDBoxLayout:
							orientation: "vertical"
							MDLabel:
								text: "BELUM UJI"
								halign: "center"
								valign: "middle"
								font_style: 'Subtitle1'

							MDLabel:
								id: lb_dash_belum_uji
								halign: "center"
								valign: "middle"
								font_style: 'H4'
								text: "0"
							
						MDBoxLayout:
							orientation: "vertical"
							MDLabel:
								text: "SUDAH UJI"
								halign: "center"
								valign: "middle"
								font_style: 'Subtitle1'

							MDLabel:
								id: lb_dash_sudah_uji
								halign: "center"
								valign: "middle"
								font_style: 'H4'
								text: "0"

					MDBoxLayout:
						orientation: "horizontal"
						size_hint_y: 0.05
						spacing: 50

						MDRectangleFlatIconButton:
							id: bt_new_inspect
							icon: "plus"
							text: "PENDAFTARAN"
							theme_text_color: "Custom"
							text_color: "#EEEEEE"
							md_bg_color: "#4471C4"
							size_hint_x: 0.3
							on_press: root.exec_new_inspect()

						MDRectangleFlatIconButton:
							id: bt_logout
							icon: "logout"
							text: "LOGOUT"
							theme_text_color: "Custom"
							text_color: "#EEEEEE"
							md_bg_color: "#FF2A2A"
							size_hint_x: 0.3
							on_press: root.exec_logout()
														
					MDBoxLayout:
						orientation: "horizontal"
						md_bg_color: "#FFFFFF"
						size_hint_y: 0.05
						padding: 20

						MDLabel:
							text: "Antrian"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.05

						MDLabel:
							text: "No. Pol"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.07

						MDLabel:
							text: "No. Uji"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.08

						MDLabel:
							text: "Status Uji"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.07

						MDLabel:
							text: "Nama"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.12

						MDLabel:
							text: "Merk"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.08

						MDLabel:
							text: "Type"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.12

						MDLabel:
							text: "Jenis"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.15

						MDLabel:
							text: "JBB"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.05

						MDLabel:
							text: "Bahan Bakar"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.08

						MDLabel:
							text: "Warna"
							halign: "left"
							valign: "middle"
							font_style: 'Subtitle1'
							size_hint_x: 0.05

					MDScrollView:
						id: layout_scroll
						size_hint_y: 0.75
						scroll_timeout:100
						MDList:
							id: layout_list

		# footer layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1

			MDBoxLayout:
				orientation: "horizontal"
				padding: 20
				spacing: 20
				md_bg_color: "#4471C4"
				size_hint_x: 0.4
				
				Image:
					source:'assets/images/logo-sorong.png'
					size_hint_x: 0.1
					allow_stretch: True  

				Image:
					source:'assets/images/logo-dishub.png'
					size_hint_x: 0.1
					allow_stretch: True  

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.8

					MDLabel:			
						text: "PEMERINTAH KABUPATEN SORONG"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:			
						text: "DINAS PERHUBUNGAN"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:			
						text: "UNIT PELAKSANA UJI BERKALA KENDARAAN BERMOTOR"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:
						text: " Klamasen, Distrik Mariat, Kabupaten Sorong, Papua Barat Daya. 98416"
						halign: "left"
						valign: "middle"
						md_bg_color: "#EEEEEE"
						theme_text_color: "Custom"
						text_color: "#000000"
						font_style: 'Subtitle1'

			MDBoxLayout:
				orientation: "vertical"
				padding: 20
				spacing: 20
				md_bg_color: "#FFC000"
				size_hint_x: 0.6

				MDLabel:			
					text: "INFORMASI"
					halign: "left"
					valign: "middle"
					font_style: 'H5'

				MDLabel:
					id: lb_info
					text: "Silahkan Pilih Kendaraan yang akan diuji dari Tabel yang Tersedia"
					halign: "left"
					valign: "middle"
					font_style: 'H6'