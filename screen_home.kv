#:kivy 2.1.0

<ScreenHome>:
    MDBoxLayout:
        orientation: "vertical"

		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint_y: 0.2
			md_bg_color: "#111111"
                    
            Image:
                id: logo
                source:'assets/images/logo-trb.png'
                size_hint_x: 0.15
                allow_stretch: True 

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.7

				MDLabel:
					id: title            
					text: "VEHICLE INSPECTION INTEGRATION MANAGEMENT SYSTEM"
					halign: "left"
					valign: "middle"
					font_style: 'H4'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: subtitle            
					text: "VISUAL INSPECTION"
					halign: "left"
					valign: "middle"
					font_style: 'H5'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.15

				MDLabel:
					id: lb_time
					text: "12:34:00"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_date
					text: "17/08/2024"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_operator
					text: "Nama Operator"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_comm
					text: "Status : Disconnected"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"

		# main layout
		MDBoxLayout:
			id: layout_main
			orientation: "horizontal"
			size_hint_y: 0.7
			padding:20

			MDBoxLayout:
				orientation: "horizontal"
				spacing:50
				
				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.1
					spacing: 20

					MDCard:
						ripple_behavior: True
                        on_press: root.exec_navigate_home()
						md_bg_color: "#EEEEEE"
                        padding: 10
						Image:
							source:'assets/images/icon-home.png'
							size_hint_x: 0.15
							allow_stretch: True 

					MDCard:
						ripple_behavior: True
                        on_press: root.exec_navigate_login()
						md_bg_color: "#EEEEEE"
                        padding: 10
						AsyncImage:
							id: img_user
							source:'assets/images/icon-login.png'
							size_hint_x: 0.15
							allow_stretch: True 

					MDCard:
						ripple_behavior: True
                        on_press: root.exec_navigate_main()
						md_bg_color: "#EEEEEE"
                        padding: 10
						Image:
							source:'assets/images/icon-realtime.png'
							size_hint_x: 0.15
							allow_stretch: True 

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.9
					spacing: 20

					MDLabel:
						text: "HOME"
						halign: "center"
						valign: "middle"
						font_style: 'H6'
						size_hint_y: 0.05

					MDCarousel:
						id: carousel
						orientation: "horizontal"
						size_hint_y: 0.95
						loop: True
						spacing: 50

						MDCard:
							Image:
								source:'assets/images/1.jpg'
								allow_stretch: True 
								fit_mode: "cover"

						MDCard:
							Image:
								source:'assets/images/2.jpg'
								allow_stretch: True 
								fit_mode: "cover"

						MDCard:
							Image:
								source:'assets/images/3.jpg'
								allow_stretch: True 
								fit_mode: "cover"

						MDCard:
							Image:
								source:'assets/images/4.jpg'
								allow_stretch: True 
								fit_mode: "cover"

		# footer layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1

			MDBoxLayout:
				orientation: "horizontal"
				padding: 20
				spacing: 20
				md_bg_color: "#4471C4"
				size_hint_x: 0.4
				
				AsyncImage:
					id: img_pemkab
					source:'assets/images/logo-sorong.png'
					size_hint_x: 0.1
					allow_stretch: True  

				AsyncImage:
					id: img_dishub
					source:'assets/images/logo-dishub.png'
					size_hint_x: 0.1
					allow_stretch: True  

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.8

					MDLabel:
						id: lb_pemkab
						text: "PEMERINTAH KABUPATEN SORONG"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"						
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_dishub
						text: "DINAS PERHUBUNGAN"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_unit			
						text: "UNIT PELAKSANA UJI BERKALA KENDARAAN BERMOTOR"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_unit_address
						text: " Klamasen, Distrik Mariat, Kabupaten Sorong, Papua Barat Daya. 98416"
						halign: "left"
						valign: "middle"
						md_bg_color: "#EEEEEE"
						theme_text_color: "Custom"
						text_color: "#000000"
						font_style: 'Subtitle1'

			MDBoxLayout:
				orientation: "vertical"
				padding: 20
				spacing: 20
				md_bg_color: "#FFC000"
				size_hint_x: 0.6

				MDLabel:			
					text: "INFORMASI"
					halign: "left"
					valign: "middle"
					font_style: 'H5'

				MDLabel:
					id: lb_info
					text: "Silahkan tekan tombol navigasi yang ada di sebelah kiri layar"
					halign: "left"
					valign: "middle"
					font_style: 'H6'