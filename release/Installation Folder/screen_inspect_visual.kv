#:kivy 2.1.0

<ScreenInspectVisual>:
    MDBoxLayout:
        orientation: "vertical"

		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint_y: 0.2
			md_bg_color: "#111111"
                    
            Image:
                id: logo
                source:'assets/images/logo-trb.png'
                size_hint_x: 0.15
                allow_stretch: True 

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.7

				MDLabel:
					id: title            
					text: "VEHICLE INSPECTION INTEGRATION MANAGEMENT SYSTEM"
					halign: "left"
					valign: "middle"
					font_style: 'H4'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: subtitle            
					text: "VEHICLE VISUAL INSPECTION"
					halign: "left"
					valign: "middle"
					font_style: 'H5'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.15

				MDLabel:
					id: lb_time
					text: "12:34:00"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_date
					text: "17/08/2024"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_operator
					text: "Nama Operator"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_comm
					text: "Status : Disconnected"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"

		# main layout
		MDBoxLayout:
			id: layout_main
			orientation: "horizontal"
			size_hint_y: 0.6
			padding:20

			MDBoxLayout:
				orientation: "horizontal"
				spacing:50

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.4
					spacing: 10

					MDLabel:
						text: "PEMERIKSAAN VISUAL KENDARAAN"
						halign: "center"
						valign: "middle"
						font_style: 'H6'
						size_hint_y: 0.05

					MDScrollView:
						id: layout_scroll_komponen_uji
						size_hint_y: 0.95
						scroll_timeout:100
						MDList:
							id: layout_list_komponen_uji
							spacing: 10

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.6
					spacing: 10

					MDBoxLayout:
						orientation: "horizontal"
						size_hint_y: 0.05

						MDRectangleFlatIconButton:
							id: bt_dropdown_caller
							text: "REKOMENDASI"
							icon: "comment"
							md_bg_color: "#4471C4"
							size_hint_x: 0.2
							disabled: True
							on_press: root.menu_komentar_uji.open()

						MDLabel:
							text: "SUB MENU PEMERIKSAAN"
							halign: "center"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.8

					MDScrollView:
						id: layout_scroll_subkomponen_uji
						size_hint_y: 0.95
						scroll_timeout:100
						MDList:
							id: layout_list_subkomponen_uji
							spacing: 10
							
		# button layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1
			padding: 20, 20
			spacing: 50

			MDRectangleFlatIconButton:
				id: bt_save
				text: "SIMPAN"
				icon: "floppy"
				md_bg_color: "#2CA02C"
				size_hint_x: 0.5
				on_press: root.exec_save()

			MDRectangleFlatIconButton:
				id: bt_cancel
				text: "BATAL"
				icon: "cancel"
				md_bg_color: "#FF2A2A"
				size_hint_x: 0.5
				on_press: root.exec_cancel()

		# footer layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1

			MDBoxLayout:
				orientation: "horizontal"
				padding: 20
				spacing: 20
				md_bg_color: "#4471C4"
				size_hint_x: 0.4
				
				Image:
					source:'assets/images/logo-sorong.png'
					size_hint_x: 0.1
					allow_stretch: True  

				Image:
					source:'assets/images/logo-dishub.png'
					size_hint_x: 0.1
					allow_stretch: True  

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.8

					MDLabel:			
						text: "PEMERINTAH KABUPATEN SORONG"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:			
						text: "DINAS PERHUBUNGAN"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:			
						text: "UNIT PELAKSANA UJI BERKALA KENDARAAN BERMOTOR"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:
						text: " Klamasen, Distrik Mariat, Kabupaten Sorong, Papua Barat Daya. 98416"
						halign: "left"
						valign: "middle"
						md_bg_color: "#EEEEEE"
						theme_text_color: "Custom"
						text_color: "#000000"
						font_style: 'Subtitle1'

			MDBoxLayout:
				orientation: "vertical"
				padding: 20
				spacing: 20
				md_bg_color: "#FFC000"
				size_hint_x: 0.6

				MDLabel:			
					text: "INFORMASI"
					halign: "left"
					valign: "middle"
					font_style: 'H5'

				MDLabel:
					id: lb_info
					text: "Silahkan Pilih Kendaraan yang akan diuji dari Tabel yang Tersedia"
					halign: "left"
					valign: "middle"
					font_style: 'H6'

<Item>
	IconLeftWidget:
		icon: root.left_icon
			