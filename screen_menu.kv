#:kivy 2.1.0

<ScreenMenu>:
    MDBoxLayout:
        orientation: "vertical"

		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint_y: 0.2
			md_bg_color: "#111111"
                    
            Image:
                id: logo
                source:'assets/images/logo-trb.png'
                size_hint_x: 0.15
                allow_stretch: True 

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.7

				MDLabel:
					id: title            
					text: "VEHICLE INSPECTION INTEGRATION MANAGEMENT SYSTEM"
					halign: "left"
					valign: "middle"
					font_style: 'H4'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: subtitle            
					text: "VISUAL INSPECTION"
					halign: "left"
					valign: "middle"
					font_style: 'H5'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.15

				MDLabel:
					id: lb_time
					text: "12:34:00"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_date
					text: "17/08/2024"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_operator
					text: "Nama Operator"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_comm
					text: "Status : Disconnected"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"

		# main layout
		MDBoxLayout:
			id: layout_main
			orientation: "vertical"
			size_hint_y: 0.6
			padding:20

			MDLabel:
				text: "MENU PEMERIKSAAN VISUAL KENDARAAN"
				halign: "center"
				valign: "middle"
				font_style: 'H6'
				size_hint_y: 0.05

			MDBoxLayout:
				orientation: "vertical"
				size_hint_y: 0.3
				padding: 20

				MDGridLayout:
					cols: 8
					md_bg_color: "#DDDDDD"
					MDLabel:
						text: "No. Antrian"
						font_style: 'Subtitle1'
						size_hint_x: 0.1
					MDLabel:
						id: lb_no_antrian
						font_style: 'H6'
						size_hint_x: 0.1
					MDLabel:
						text: "Nama"
						font_style: 'Subtitle1'
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_nama
						font_style: 'H6'
						size_hint_x: 0.2				
					MDLabel:
						text: "Alamat"
						font_style: 'Subtitle1'
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_alamat
						font_style: 'H6'	
						size_hint_x: 0.2
					MDLabel:
						text: "Status Uji"
						font_style: 'Subtitle1'
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_status_uji
						font_style: 'H6'	
						size_hint_x: 0.1

				MDGridLayout:
					cols: 8
					md_bg_color: "#DDDDDD"						
					MDLabel:
						text: "No. Uji"
						font_style: 'Subtitle1'
						size_hint_x: 0.1
					MDLabel:
						id: lb_no_uji
						font_style: 'H6'
						size_hint_x: 0.1
					MDLabel:
						text: "No. Polisi"
						font_style: 'Subtitle1'
						size_hint_x: 0.1
					MDLabel:
						id: lb_no_pol
						font_style: 'H6'
						size_hint_x: 0.2
					MDLabel:
						text: "Tanggal Terakhir Uji"
						font_style: 'Subtitle1'	
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_tgl_uji_terakhir
						font_style: 'H6'
						size_hint_x: 0.2
					MDLabel:
						text: "Tanggal Habis Uji"
						font_style: 'Subtitle1'	
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_tgl_uji_habis
						font_style: 'H6'
						size_hint_x: 0.1

				MDGridLayout:
					cols: 8
					md_bg_color: "#DDDDDD"
					MDLabel:
						text: "Merk"
						font_style: 'Subtitle1'	
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_merk
						font_style: 'H6'	
						size_hint_x: 0.1
					MDLabel:
						text: "Type"
						font_style: 'Subtitle1'	
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_type
						font_style: 'H6'	
						size_hint_x: 0.2
					MDLabel:
						text: "Jenis Kendaraan"
						font_style: 'Subtitle1'	
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_jenis_kendaraan
						font_style: 'H6'	
						size_hint_x: 0.2
					MDLabel:
						text: "Warna"
						font_style: 'Subtitle1'
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_warna
						font_style: 'H6'
						size_hint_x: 0.1

				MDGridLayout:
					cols: 8
					md_bg_color: "#DDDDDD"
					MDLabel:
						text: "Bahan Bakar"
						font_style: 'Subtitle1'	
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_bahan_bakar
						font_style: 'H6'
						size_hint_x: 0.1
					MDLabel:
						text: "No. Mesin"
						font_style: 'Subtitle1'	
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_mesin
						font_style: 'H6'	
						size_hint_x: 0.2
					MDLabel:
						text: "No. Rangka"
						font_style: 'Subtitle1'	
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_chasis
						font_style: 'H6'	
						size_hint_x: 0.2					
					MDLabel:
						text: "JBB"
						font_style: 'Subtitle1'
						size_hint_x: 0.1
					MDLabel:
						id: lb_temp_jbb
						font_style: 'H6'
						size_hint_x: 0.1

			MDBoxLayout:
				orientation: "vertical"
				padding: 350, 10
				size_hint_y: 0.7
				
				MDBoxLayout:
					orientation: "horizontal"
					size_hint_y: 0.5
					spacing: 20

					MDCard:
						orientation: "vertical"
						ripple_behavior: True
						on_press: root.exec_barrier_open()
						on_release: root.exec_barrier_stop()
						md_bg_color: "#EEEEEE"
						padding: 10
						Image:
							source:'assets/images/icon-barrier-open.png'
							size_hint_y: 0.9
							allow_stretch: True 
						MDLabel:
							size_hint_y: 0.1
							halign: "center"
							text: "Buka Gate"	

					MDCard:
						orientation: "vertical"
						ripple_behavior: True
						on_press: root.exec_inspect_id()
						md_bg_color: "#EEEEEE"
						padding: 10
						Image:
							source:'assets/images/icon-inspect-id.png'
							size_hint_y: 0.9
							allow_stretch: True 
						MDLabel:
							size_hint_y: 0.1
							halign: "center"
							text: "Pra Uji Identitas Kendaraan"

					MDCard:
						orientation: "vertical"
						ripple_behavior: True
						on_press: root.exec_inspect_dimension()
						md_bg_color: "#EEEEEE"
						padding: 10
						Image:
							source:'assets/images/icon-inspect-id.png'
							size_hint_y: 0.9
							allow_stretch: True 
						MDLabel:
							size_hint_y: 0.1
							halign: "center"
							text: "Pra Uji Dimensi Kendaraan"

					MDCard:
						orientation: "vertical"
						ripple_behavior: True
						on_press: root.exec_capture()
						md_bg_color: "#EEEEEE"
						padding: 10
						Image:
							source:'assets/images/icon-capture.png'
							size_hint_y: 0.9
							allow_stretch: True 
						MDLabel:
							size_hint_y: 0.1
							halign: "center"
							text: "Photo Visual"

				MDBoxLayout:
					orientation: "horizontal"
					size_hint_y: 0.5
					spacing: 20

					MDCard:
						orientation: "vertical"
						ripple_behavior: True
						on_press: root.exec_inspect_visual()
						md_bg_color: "#EEEEEE"
						padding: 10
						Image:
							source:'assets/images/icon-inspect-visual.png'
							size_hint_y: 0.9
							allow_stretch: True 
						MDLabel:
							size_hint_y: 0.1
							halign: "center"
							text: "Inspeksi Visual 1"

					MDCard:
						orientation: "vertical"
						ripple_behavior: True
						on_press: root.exec_inspect_visual2()
						md_bg_color: "#EEEEEE"
						padding: 10
						Image:
							source:'assets/images/icon-inspect-visual.png'
							size_hint_y: 0.9
							allow_stretch: True 
						MDLabel:
							size_hint_y: 0.1
							halign: "center"
							text: "Inspeksi Visual 2"

					MDCard:
						orientation: "vertical"
						ripple_behavior: True
						on_press: root.exec_inspect_pit()
						md_bg_color: "#EEEEEE"
						padding: 10
						Image:
							source:'assets/images/icon-inspect-pit.png'
							size_hint_y: 0.9
							allow_stretch: True 
						MDLabel:
							size_hint_y: 0.1
							halign: "center"
							text: "Inspeksi Pit Kendaraan"

					MDCard:
						orientation: "vertical"
						ripple_behavior: True
						on_press: root.exec_barrier_close()
						on_release: root.exec_barrier_stop()
						md_bg_color: "#EEEEEE"
						padding: 10
						Image:
							source:'assets/images/icon-barrier-close.png'
							size_hint_y: 0.9
							allow_stretch: True 
						MDLabel:
							size_hint_y: 0.1
							halign: "center"
							text: "Tutup Gate"

		# button layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1
			padding: 20, 20
			spacing: 50

			MDRectangleFlatIconButton:
				id: bt_verify_data
				icon: "check"
				text: "VERIFIKASI DATA"
				md_bg_color: "#4471C4"
				theme_text_color: "Custom"
				text_color: "#EEEEEE"
				size_hint_x: 1
				disabled: True
				on_press: root.exec_verify_data()

			MDRectangleFlatIconButton:
				id: bt_verify_payment
				icon: "cash"
				text: "VERIFIKASI PEMBAYARAN"
				md_bg_color: "#2CA02C"
				theme_text_color: "Custom"
				text_color: "#EEEEEE"
				size_hint_x: 1
				disabled: True
				on_press: root.exec_verify_payment()

			MDRectangleFlatIconButton:
				id: bt_back
				icon: "cancel"
				text: "BATALKAN INSPEKSI"
				md_bg_color: "#FF2A2A"
				theme_text_color: "Custom"
				text_color: "#EEEEEE"
				size_hint_x: 1
				on_press: root.exec_cancel()

		# footer layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1

			MDBoxLayout:
				orientation: "horizontal"
				padding: 20
				spacing: 20
				md_bg_color: "#4471C4"
				size_hint_x: 0.4
				
				AsyncImage:
					id: img_pemkab
					source:'assets/images/logo-sorong.png'
					size_hint_x: 0.1
					allow_stretch: True  

				AsyncImage:
					id: img_dishub
					source:'assets/images/logo-dishub.png'
					size_hint_x: 0.1
					allow_stretch: True  

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.8

					MDLabel:
						id: lb_pemkab
						text: "PEMERINTAH KABUPATEN SORONG"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"						
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_dishub
						text: "DINAS PERHUBUNGAN"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_unit			
						text: "UNIT PELAKSANA UJI BERKALA KENDARAAN BERMOTOR"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_unit_address
						text: " Klamasen, Distrik Mariat, Kabupaten Sorong, Papua Barat Daya. 98416"
						halign: "left"
						valign: "middle"
						md_bg_color: "#EEEEEE"
						theme_text_color: "Custom"
						text_color: "#000000"
						font_style: 'Subtitle1'

			MDBoxLayout:
				orientation: "vertical"
				padding: 20
				spacing: 20
				md_bg_color: "#FFC000"
				size_hint_x: 0.6

				MDLabel:			
					text: "INFORMASI"
					halign: "left"
					valign: "middle"
					font_style: 'H5'

				MDLabel:
					id: lb_info
					text: "Silahkan tekan tombol untuk mengendalikan Portal, kemudian tekan tombol PERIKSA untuk melanjutkan pemeriksaan"
					halign: "left"
					valign: "middle"
					font_style: 'H6'